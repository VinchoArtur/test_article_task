{
  "name": "test_task",
  "version": "0.0.1",
  "description": "NestJS REST API with JWT authentication, PostgreSQL, and Redis caching",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",

    "test": "jest src",
    "test:watch": "jest --watch src",
    "test:cov": "jest --coverage src",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand src",
    "test:e2e": "jest test --testTimeout=30000",

    "migration:generate": "typeorm-ts-node-commonjs -d ormconfig.ts migration:generate",
    "migration:create": "typeorm-ts-node-commonjs -d ormconfig.ts migration:create",
    "migration:run": "typeorm-ts-node-commonjs -d ormconfig.ts migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d ormconfig.ts migration:revert",

    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "npm run docker:down && npm run docker:up",

    "db:wait": "node -e \"const{execSync}=require('child_process');let retries=30;const wait=()=>{try{execSync('docker exec articles-postgres pg_isready -U postgres',{stdio:'ignore'});console.log('✅ PostgreSQL ready')}catch{if(--retries>0){console.log('⏳ Waiting for PostgreSQL...');setTimeout(wait,2000)}else{console.error('❌ PostgreSQL timeout');process.exit(1)}}};wait()\"",
    "redis:wait": "node -e \"const{execSync}=require('child_process');let retries=30;const wait=()=>{try{execSync('docker exec articles-redis redis-cli ping',{stdio:'ignore'});console.log('✅ Redis ready')}catch{if(--retries>0){console.log('⏳ Waiting for Redis...');setTimeout(wait,2000)}else{console.error('❌ Redis timeout');process.exit(1)}}};wait()\"",

    "db:setup": "node scripts/setup-db.js && npm run migration:run",
    "test:connections": "npm run test:db && npm run test:redis",
    "test:db": "node scripts/test-connection.js",
    "test:redis": "node scripts/test-reddis-connection.js",

    "setup:full": "npm run docker:up && npm run db:wait && npm run redis:wait && npm run db:setup && npm run test:connections",
    "setup:dev": "npm run setup:full && npm run start:dev",
    "setup:quick": "npm run docker:restart && npm run db:wait && npm run redis:wait && npm run start:dev",

    "clean": "npm run docker:down && docker system prune -f",
    "reset": "npm run clean && npm run setup:full",

    "dev": "npm run setup:dev",
    "quick": "npm run setup:quick"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^6.0.0",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.1",
    "express-rate-limit": "^8.0.1",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.5",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "compression": "^1.8.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "helmet": "^8.1.0",
    "jest": "^29.7.0",
    "jest-extended": "^6.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/test"],
    "testMatch": [
      "**/__tests__/**/*.(t|j)s",
      "**/*.(test|spec).(t|j)s",
      "**/test/**/*.e2e-spec.(t|j)s"
    ]
  }
}